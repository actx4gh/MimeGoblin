{
  "manifest_version": 3,
  "name": "MimeGoblin",
  "version": "1.1.5",
  "description": "Rule-based download routing: send files into subfolders using regex matches on filename, URL, referrer, final URL, or MIME type. No tracking. No content scripts.",
  "permissions": [
    "downloads",
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "MimeGoblin",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "short_name": "MimeGoblin"
}
